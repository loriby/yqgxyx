/**app.wxss**/
page{
  background: #f4f4f4;
  border-bottom: 2rpx solid #f4f4f4;
}
image{
  display: block;
}
.clear{
  clear: both;
  display: block;
}
navigator{
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
}
.gotop{
	width: 100rpx;
	height: 100rpx;
	position: fixed;
	bottom: 160rpx;
	right: 20rpx;
	background: #fff;
	border: 4rpx solid #999;
	border-radius: 50rpx;
}
.gotop image{
	width: 100%;
	height: 100%;
}
.mc{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #000;
	opacity: .5;
}
.loading{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #fff;
}
.loading image{
	width: 600rpx;
	height: 600rpx;
	position: fixed;
	top: 50%;
	left: 50%;
	margin: -300rpx 0 0 -300rpx;
}
.dbox{
	display: flex;
}
.dflex{
	flex: 1;
}
.customer_service{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50rpx;
	color: #fff;
	position: fixed;
	top: 50%;
	right: 20rpx;
	font-size: 28rpx;
	padding: 0;
	line-height: 100rpx;
	background: #fff url(https://www.xriml.com/applet/images/service.png) no-repeat;
	background-size: 100% 100%;
	background-position: center;
}