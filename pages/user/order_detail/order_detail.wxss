	height: 26rpx;
	margin: 34rpx 0 0 20rpx;
}
.ods_name view{
	float: left;
	font-size: 28rpx;
	color: #333333;
	line-height: 92rpx;
	margin-left: 15rpx;
}
.od_goods{
	height: 220rpx;
	border-bottom: 2rpx solid #f3f3f3;
	background: #fff;
	padding: 28rpx 0 0 28rpx;
