	border: 2rpx solid #f3f3f3;
}
.odg_msg{
	flex: 1;
	margin: 0 20rpx 0 26rpx;
}
.goods_name{
	font-size: 28rpx;
	line-height: 40rpx;
	height: 80rpx;
	overflow: hidden;
}
.goods_speci{
