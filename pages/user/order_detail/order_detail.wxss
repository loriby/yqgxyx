	margin-top: 10rpx;
}
.goods_price{
	margin-top: 30rpx;
}
.goods_pri{
	float: left;
	font-size: 24rpx;
	color: #333333;
}
.goods_count{
	float: right;
	font-size: 24rpx;
	color: #999;
}
.od_tot{
	padding-right: 20rpx;
	height: 92rpx;
	background: #fff;
	text-align: right;
