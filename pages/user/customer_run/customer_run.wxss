page{
	background: #f0f0f0;
}
.cr_list{
	width: 100%;
	height: 110rpx;
	border-top: 2rpx solid #f5f5f5;
	background: #fff;
	line-height: 110rpx;
	font-size: 32rpx;
	display: flex;
}
.cr_txt{
	width: 140rpx;
	margin-left: 20rpx;
}
.cr_sele{
	flex: 1;
	margin-right: 20rpx;
	background: url(http://www.zhue.cn/mobile/themes/zhue/images/applet/right-j.png) no-repeat;
	background-size: 15rpx 22rpx;
	background-position: right center;
	padding-right: 30rpx;
}
.cr_sele picker{
	font-size: 32rpx;
	color: #999999;
	text-align: right;
}
.cr_list1{
	width: 100%;
	height: 226rpx;
	border-top: 2rpx solid #f5f5f5;
	background: #fff;
	line-height: 110rpx;
	font-size: 32rpx;
	display: flex;
}
.cr_text{
	flex: 1;
	margin-right: 20rpx;
	padding-top: 36rpx;
}
.cr_text textarea{
	width: 100%;
	height: 100%;
	font-size: 28rpx;
	color: #333;
	line-height: 40rpx;
}
.cr_des{
	flex: 1;
	font-size: 24rpx;
	color: #999999;
	line-height: 32rpx;
	margin-top: 36rpx;
}
.cr_ipt{
	flex: 1;
	padding-right: 20rpx;
}
.cr_ipt input{
	width: 100%;
	height: 100%;
	font-size: 32rpx;
	color: #333;
	text-align: right;
}
.cr_btn{
	padding: 0 20rpx;
	margin-top: 40rpx;
}
.cr_btn button{
	width: 100%;
	height: 88rpx;
	font-size: 32rpx;
	color: #fff;
	text-align: center;
	background: #f23030;
}
.cr_imgs{
	width: 100%;
	background: #fff;
	padding-top: 40rpx;
	padding-bottom: 1rpx;
}
.sele_img{
	width: 116rpx;
	height: 116rpx;
	background: url(http://www.zhue.cn/mobile/themes/zhue/images/applet/images_7.jpg) no-repeat;
	background-size: 100% 100%;
	margin-bottom: 40rpx;
	margin-left: 20rpx;
}