page{
  background: #f0f0f0;
}
.ol_wrap{
  width: 100%;
  height: 94rpx;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  display: flex;
  font-size: 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}
.ol_list{
  flex: 1;
  color: #333333;
  text-align: center;
  line-height: 94rpx;
}
.ol_list text{
  color: #f23030;
}
.ol_wrap .checked{
  border-bottom: 4rpx solid #f23031;
  color: #f33132;
  height: 90rpx;
}
.ol_order{
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 20rpx;
  padding-top: 10px;
  border-top: 2rpx solid #f0f0f0;
}
.olo_id{
  height: 52rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 52rpx;
  text-indent: 20rpx;
}
.oloi_right{
	float: right;
	margin-right: 20rpx;
}
.oloi_left{
	float: left;
}
.olo_time{
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  text-indent: 20rpx;
  color: #333;
}
.olo_goods{
  border-bottom: 2rpx solid #f0f0f0;
  height: 200rpx;
  display: flex;
}
.og_list{
  flex: 1;
  margin-left: 20rpx;
  height: 200rpx;
}
.og_list image{
  height: 160rpx;
  width: 160rpx;
  margin: 20rpx 20rpx 0;
  display: inline-block;
}
.og_arrow{
  width: 16rpx;
  height: 26rpx;
  padding: 87rpx 20rpx 0;
}
.ogl_wrap{
  white-space: nowrap;
  width:674rpx;
  display: flex
}
.og_pay{
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.ogp_mon{
  float: left;
  font-size: 28rpx;
  color: #343434;
}
.ogp_btn{
  float: right;
  width: 152rpx;
  height: 48rpx;
  font-size: 24rpx;
  text-align: center;
  border: 2rpx solid #f23030;
  line-height: 48rpx;
  margin-top: 13rpx;
  color: #f23030;
  border-radius: 10rpx;
}
.ogp_btn_ddgz{
  float: right;
  width: 152rpx;
  height: 48rpx;
  font-size: 24rpx;
  text-align: center;
  border: 2rpx solid #a0a0a0;
  line-height: 48rpx;
  margin-top: 13rpx;
  color: #333333;
  border-radius: 10rpx;
}