page{
  background: #f0f0f0;
}
.container{
  padding-bottom: 100rpx;
}
.cart_tit{
  width: 100%;
  height: 94rpx;
  border-bottom: 2rpx solid #f5f5f5;
  border-top: 2rpx solid #f5f5f5;
  display: flex;
  background: #fff;
}
.ct_radio{
  width: 38rpx;
  height: 38rpx;
  margin: 24rpx 16rpx 0 20rpx;
  position: relative
}
.ct_radio image{
  width: 100%;
  height: 100%;
}
.ct_radio radio{
  width: 38rpx;
  height: 38rpx;
  color: #f23030;
}
.ct_name{
  font-size: 28rpx;
  line-height: 94rpx;
  color: #333333;
  margin-left: 16rpx;
}
.cart_discounts{
  width: 100%;
  padding-top: 10rpx;
  background: #fff;
}
.cd_list{
  width: 100%;
  display: flex;
  padding: 10rpx 0;
}
.cd_type{
  font-size: 24rpx;
  width: 48rpx;
  height: 28rpx;
  padding: 0 4rpx;
  line-height: 28rpx;
  border: 2rpx solid #f2434a;
  color: #f2434a;
  border-radius: 6rpx;
  margin: 0 20rpx;
}
.cd_msg{
  flex: 1;
  font-size: 24rpx;
  height: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
}
.cd_arrow{
  width: 12rpx;
  height: 22rpx;
  padding: 0 20rpx;
}
.cart_goods{
  width: 100%;
  background: #fff;
  padding-bottom: 36rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.cg_list{
  width: 100%;
  display: flex;
}
.cg_radio{
  margin:90rpx 56rpx 0 20rpx
}
.cg_img{
  width: 168rpx;
  height: 168rpx;
  border: 2rpx solid #e7e5e6;
  border-radius: 10rpx;
  margin-top: 26rpx;
}
.cg_msg{
  flex: 1;
  margin-right: 20rpx;
}
.cgm_name{
  font-size: 28rpx;
  color: #000;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  margin: 26rpx 0 0 20rpx;
}
.cgm_speci{
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}
.cgm_speci text{
  display: inline-block;
  margin-right: 18rpx;
}
.cgm_mon{
  margin: 12rpx 0 0 20rpx;
}
.cgm_price{
  font-size: 28rpx;
  color: #f2434a;
  float: left;
}
.cgm_count{
  float: right;
  width: 166rpx;
  height: 46rpx;
  border: 2rpx solid #cdcdcd;
  border-radius: 8rpx;
}
.cgm_countl{
  float: left;
  width: 44rpx;
  height: 46rpx;
  font-size: 36rpx;
  line-height: 42rpx;
  text-align: center;
  color: #323232;
}
.cgm_countc{
  float: left;
  width: 68rpx;
  height: 46rpx;
  border: 2rpx solid #cdcdcd;
  border-top: none;
  border-bottom: none;
}
.cgm_countc input{
  width: 68rpx;
  height: 46rpx;
  font-size: 28rpx;
  line-height: 46rpx;
  text-align: center;
}
.cgm_countr{
  width: 46rpx;
  height: 46rpx;
  float: left;
  font-size: 36rpx;
  line-height: 42rpx;
  text-align: center;
  color: #323232;
}
.cg_give{
  margin: 20rpx 20rpx 0;
  width: 525rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #343434;
}
.cg_give text{
  color: #f14446;
}
.cart_accounts{
  width: 100%;
  display: flex;
  height: 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.ca_msg{
  flex: 1;
}
.ca_btn{
  width: 200rpx;
  height: 100rpx;
  background: #f23030;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.cam_radio{
  margin:24rpx 16rpx 0 20rpx;
  float: left;
}
.cam_select{
  float: left;
  font-size: 24rpx;
  color: #666666;
  line-height: 100rpx;
}
.cam_tot{
  font-size: 28rpx;
  color: #000;
  line-height: 100rpx;
  margin-left: 28rpx;
  float: left;
}